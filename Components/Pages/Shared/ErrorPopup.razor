@foreach (var error in Errors)
{
    <div class="error-popup">
        <span>@error.Title</span>
        <div>@error.Description</div>
        @if (!string.IsNullOrEmpty(error.AdditionalDetails))
        {
            <div>@error.AdditionalDetails</div>
        }
    </div>
}

<style>
    .error-popup {
        background-color: #f8d7da;
        color: #721c24;
        margin: 10px;
        padding: 20px;
        border: 1px solid #f5c6cb;
        border-radius: 4px;
        position: relative;
    }

        .error-popup span {
            font-weight: bold;
            font-size: 18px;
        }

        .error-popup div {
            margin-top: 10px;
            font-size: 16px;
        }
</style>
