@using VotingSystem.Components.Pages.Shared
@rendermode InteractiveServer

@if (Errors.Any())
{
    <ErrorPopup Errors="@Errors" />
}
@if (!CreateAccount)
{
    <EditForm Model="LoginRequest" OnValidSubmit="async () => await HandleLogin()" FormName="loginForm" class="login-form">
        <h1>Login</h1>
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="username">Username:</label>
            <InputText id="username" class="form-control" @bind-Value="LoginRequest.Username" />
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <InputText id="password" type="password" class="form-control" @bind-Value="LoginRequest.Password" />
        </div>

        <button type="submit">Login</button>

        <div class="form-group">No Account?</div>
        <button @onclick="() => CreateAccount = true">Make one!</button>
    </EditForm>
}
else
{
    <CustomerRegisterPage OnCreation="@HandleRegister" Return="() => CreateAccount = false"/>
}

<style>
    h1 {
        padding: .5rem;
    }

    .login-form {
        margin: .75rem;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .form-group {
        padding-top: .5rem;
    }


    button {
        margin: .5rem;
    }
</style>
