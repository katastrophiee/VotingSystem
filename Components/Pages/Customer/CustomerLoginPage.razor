@rendermode InteractiveServer

@if (Errors.Any())
{
    <ErrorPopup Errors="@Errors" />
}
@if (!CreateAccount)
{
    <h3>Login Page</h3>

    <EditForm Model="LoginRequest" OnValidSubmit="async () => await HandleLogin()" FormName="loginForm">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="username">Username:</label>
            <InputText id="username" class="form-control" @bind-Value="LoginRequest.Username" />
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <InputText id="password" type="password" class="form-control" @bind-Value="LoginRequest.Password" />
        </div>

        <button type="submit">Login</button>

        <div>No Account?</div>
        <button @onclick="() => CreateAccount = true">Make one!</button>
    </EditForm>
}
else
{
    <CustomerRegisterPage OnCreation="@HandleRegister"/>
}
